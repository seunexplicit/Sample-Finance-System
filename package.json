  "description": "TypeScript + Mongoose + MongoDB + Express API Server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && pm2 start ecosystem.config.js --only prod",
    "heroku-postbuild": "npm install pm2 typescript",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && tsc-alias",
